@model PhoneBook.Models.Phone

<div class="mt-3">
    <button type="button" class="mt-3 btn btn-success" data-bs-toggle="modal" data-bs-target="#AddPhoneModal">
        Add Phone
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="AddPhoneModal" tabindex="-1" aria-labelledby="AddPhoneLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddPhoneLabel">Add Phone</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Customers" asp-action="_AddPhone" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="CustomerId" />

                    <div class="mt-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <label asp-for="PhoneCodeId" class="control-label"></label>
                        <select asp-for="PhoneCodeId" class="form-control" asp-items="ViewBag.PhoneCodeId"></select>
                        <span asp-validation-for="PhoneCodeId" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <label asp-for="PhoneTypeId" class="control-label"></label>
                        <select asp-for="PhoneTypeId" class="form-control" asp-items="ViewBag.PhoneTypeId"></select>
                        <span asp-validation-for="PhoneTypeId" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>